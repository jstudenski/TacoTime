<h2>TacoTime!</h2>

<form class="add-taco">

  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name">
  </div>

  <button type="submit">Add Taco</button>
</form>




<h3>Feed me!</h3>

<ul>
  {{#each tacos}}
    {{#unless eaten}}
       <li>
<!--       <p><span class="label">ID:</span> {{this.id}}</p> -->
      <p><span class="label">Taco:</span> {{this.taco_name}}</p>
<!--       <p><span class="label">Eaten:</span> {{this.eaten}}</p> -->
      <button data-id="{{this.id}}" class="eatTaco">Eat</button>
      <button data-id="{{this.id}}" class="tossTaco">Toss</button>

{{!-- <a href="/{{this.id}}">Update this quote</a> --}}

    </li>
    {{/unless}}
  {{/each}}
</ul>

