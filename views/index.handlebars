<h2>TacoTime!</h2>

<form class="add-taco">

  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name">
  </div>

  <button type="submit">Add Taco</button>
</form>




<h3>Feed me!</h3>

<ul>
  {{#each tacos}}
    {{#unless eaten}}
       {{> taco-item eaten=false}}


    {{/unless}}
  {{/each}}
</ul>

<h3>Cats that are eaten!</h3>

<ul>
  {{#each tacos}}
    {{#if eaten}}

       {{> taco-item eaten=true}}
    {{/if}}
  {{/each}}
</ul>




