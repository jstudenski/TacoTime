<div id="left"></div>
<div id="right"></div>
<div id="bottom"></div>

<header id="top">

  <h2>TacoTime!</h2>

  <form class="add-taco">
    <button type="submit">Add Taco</button>
    <div class="form-group">
      <input type="text" id="name" name="name" placeholder="Add taco..." />
    </div>
  </form>

</header>


<main>
  
  <div class="panel">

    <h3>Feed me!</h3>

    {{#each tacos}}
      {{#unless eaten}}
         {{> taco-item eaten=false}}
      {{/unless}}
    {{/each}}

  </div>
  <div class="panel">
    <h3>Tacos that are eaten!</h3>

    {{#each tacos}}
      {{#if eaten}}

        {{> taco-item eaten=true}}
      {{/if}}
    {{/each}}

  </div>

</main>